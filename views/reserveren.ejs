<%- include('./partials/head') %>

<!-- De opmaak van de header  -->
<%- include('./partials/header') %>

<link rel="stylesheet" href="./style/reservations.css" />

<main>
    <section class="section-studyplace">
        <h1>Reserveer dit exemplaar</h1>
        <form class="form-reservate" action="/reserveren" method="post">
            <fieldset>
				<legend>Persoonlijke gegevens</legend>
				<label for="obaId">oba ID nummer</label>
				<input
					required
					id="obaId"
					type="text"
					name="obaId"
					value=""
                    
				/>
				<label for="userName">Wat is uw voornaam?</label>
				<input
					required
					id="userName"
					type="text"
					name="userName"
					value="<%= locals.reservations?.userName ?? '' %>"
				/>
				<label for="date">
                    Wanneer wilt u een boek lenen?</label>
				<input
					required
					id="date"
					type="date"
					name="date"
					value="<%= locals.reservations?.date ?? '' %>"
				/>
				<button class="execute" type="submit" value="reserveren">reserveren</button>
			</fieldset>
        </form>
        <img src="" />
    </section>
</main>

<%- include('./partials/foot') %>