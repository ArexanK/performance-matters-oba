<%- include('./partials/head') %>
<link rel="stylesheet" href="./style/vestigingen.css" />
<!-- De opmaak van de header  -->
<%- include('./partials/header') %>

<main>
    <section>
        <h1>Bezoek onze vestigingen</h1>
    </section>
    <section class="locations">
    <% vestigingen.forEach(vestiging => { %>
		<article>
            <picture>
                <source media="(min-width: 20em)" srcset="<%= vestiging.foto.small %>" />
                <source media="(min-width: 20em)" srcset="<%= vestiging.foto.smallAsWebP %>" />
                <source media="(min-width: 48em)" srcset="<%= vestiging.foto.original %>" />
                <source media="(min-width: 48em)" srcset="<%= vestiging.foto.originalAsWebP %>" />
                <img src="<%= vestiging.foto.original %>" srcset="<%= vestiging.foto.small %>, <%= vestiging.foto.smallAsWebP %>, <%= vestiging.foto.original %>, <%= vestiging.foto.originalAsWebP %>" sizes="(min-width: 20em)" />
            </picture>
            <h2><%= vestiging.naam %></h2>
		</article>
		<% }); %>
    </section>
</main>

<dialog>

</dialog>

<%- include('./partials/foot') %>