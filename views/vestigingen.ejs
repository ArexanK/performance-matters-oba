<%- include('./partials/head') %>
<link rel="stylesheet" href="./style/vestigingen.css" />
<!-- De opmaak van de header  -->
<%- include('./partials/header') %>

<main>
    <section>
        <h1>Bezoek onze vestigingen</h1>
    </section>
    <section class="locations">
    <% vestigingen.forEach(vestiging => { %>
        <article>
            <picture>
                <source 
                    media="(min-width: 20em)" 
                    srcset="<%= vestiging.foto.smallAsWebP %>, <%= vestiging.foto.small %>" 
                    type="image/jpeg, image/webp"
                    width="1920"
                    height="1080"  />
                <source media="(min-width: 48em)" srcset="<%= vestiging.foto.original %>, <%= vestiging.foto.originalAsWebP %>" type="image/jpeg,image/webp" />
                <img 
                    src="<%= vestiging.foto.smallAsWebP %>" 
                    alt="Vestiging <%= vestiging.naam %>" 
                    width="300" 
                    height="300" 
                    loading="lazy"
                    srcset="
                    <%= vestiging.foto.smallAsWebP %> 320w, 
                    <%= vestiging.foto.originalAsWebP %> 640w, 
                    <%= vestiging.foto.original %> 1280w" 
                    sizes="(min-width: 20em) 100vw" />
            </picture>            
            <h2><%= vestiging.naam %></h2>
        </article>
        
		<% }); %>
    </section>
</main>

<dialog>

</dialog>

<%- include('./partials/foot') %>